<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="48dp"
                android:paddingBottom="32dp"
                android:paddingHorizontal="24dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:alpha="1"
                    android:contentDescription="GeoTrack Live Logo"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_geotrack_background_null" />

                <!-- Animated Location Icon Below Logo (Optional Enhancement) -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradient_line" />

            </LinearLayout>

            <!-- Main Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Phone Input Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número Telefónico"
                            android:textSize="12sp"
                            android:textColor="@color/brand_primary"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="none"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ingresa un número telefónico"
                                android:inputType="phone"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_secondary"
                                android:background="@drawable/input_background"
                                android:padding="12dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Send Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendSMS"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:text="Enviar ubicación por SMS"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    app:cornerRadius="28dp"
                    android:backgroundTint="@color/brand_primary"
                    app:rippleColor="@color/brand_secondary"
                    app:elevation="4dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/input_background" />

                <!-- GPS Coordinates Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCoordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Card Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_header_gradient"
                            android:padding="20dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location_on"
                                app:tint="@color/white"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coordenadas registradas"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Coordinates Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/data_background">


                            <!-- Coordinates Grid -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/coordinates_background"
                                android:padding="16dp">

                                <!-- Latitude -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="12dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_latitude"
                                        app:tint="@color/brand_primary"
                                        android:layout_marginEnd="12dp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Latitud"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary" />



                                    <TextView
                                        android:id="@+id/tvLatitude"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.000000"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_primary"
                                        android:fontFamily="@font/roboto_mono_regular" />

                                </LinearLayout>

                                <!-- Longitude -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="12dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_longitude"
                                        app:tint="@color/brand_primary"
                                        android:layout_marginEnd="12dp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Longitud"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary" />

                                    <TextView
                                        android:id="@+id/tvLongitude"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.000000"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_primary"
                                        android:fontFamily="@font/roboto_mono_regular" />

                                </LinearLayout>

                                <!-- Altitude -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="12dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_altitude"
                                        app:tint="@color/brand_primary"
                                        android:layout_marginEnd="12dp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Altitud"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary" />

                                    <TextView
                                        android:id="@+id/tvAltitude"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00.00 m.s.n.m"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_primary"
                                        android:fontFamily="@font/roboto_mono_regular" />

                                </LinearLayout>

                                <!-- Date Time -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_time"
                                        app:tint="@color/brand_primary"
                                        android:layout_marginEnd="12dp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Fecha y Hora"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary" />

                                    <TextView
                                        android:id="@+id/tvDateTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="9999-12-31 23:59:59"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_primary" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
